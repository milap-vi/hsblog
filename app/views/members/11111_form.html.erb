         <span class="text-error text-message"><%= @member.errors[:first_name].first %></span>
       <% end %>

</td>
		<td></td>
	</tr>
	<tr>
		<td align='right'>Last Name</td>
		<td align='left'><%= m.text_field :last_name %>
			<% if @member.errors[:last_name].any? %>
			 <span class="text-error text-message"><%= @member.errors[:last_name].first %></span>
		       <% end %>
		</td>
		<td></td>
	</tr>

	<tr>
		<td align='right'><%= m.label :username %></td>
		<td align='left'><%= m.text_field :username %>
			<% if @member.errors[:username].any? %>
			 <span class="text-error text-message"><%= @member.errors[:username].first %></span>
		       <% end %>
		</td>
		<td></td>
	</tr>
	<tr>
		<td align='right'><%= m.label :email %></td>
		<td align='left'><%= m.text_field :email %>
			<% if @member.errors[:email].any? %>
			 <span class="text-error text-message"><%= @member.errors[:email].first %></span>
		       <% end %>
		</td>
		<td></td>
	</tr>

	<tr>
		<td align='right'><%= m.label :password %></td>
		<td align='left'><%= m.password_field :password %>
			<% if @member.errors[:password].any? %>
			 <span class="text-error text-message"><%= @member.errors[:password].first %></span>
		       <% end %>
		</td>
		<td></td>
	</tr>
