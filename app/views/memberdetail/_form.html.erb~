				<% end %>
				<br />

				<%= m.label :email %>
				<%= m.text_field :email %>
				<% if @member.errors[:email].any? %>
			 		<label>&nbsp;</label><%= @member.errors[:email].first %>
		       	<% end %>
                <br />


				<%= m.fields_for @memberdetails do |mb| %>
					<%= mb.label :address %>
