class Tempsignin < ApplicationController
include ActiveModel::Validations # Only inject validation features of models
attr_accessor :username, :password
 
def self.validates_against_future(*attrs)
validates_each attrs do |record, attr, value|
		if value == ''
		record.errors.add attr, "can't be in the future" 
		end
end
end
 
validates_against_future :username, :password

 
def initialize(username, password)
	@username, @password = username, password
end
end
